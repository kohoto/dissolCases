FoamFile
{
    version     2.0;
    format      ascii;
    class       pointVectorField;
    location    "0";
    object      pointMotionU;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 0 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    inlet
    {
      type            fixedValue;
      value           uniform (0 0 0);
    }

    outlet
    {
      type            fixedValue;
      value           uniform (0 0 0);
    }

    insolubleX
    {
      type            fixedNormalSlip;
      value           uniform (0 0 0);
      n               (1 0 0);
    }

    insolubleY
    {
      type            fixedNormalSlip;
      value           uniform (0 0 0);
      n               (0 1 0);
    }

    "insolubleZ.*"
    {
      type            fixedValue;
      value           uniform (0 0 0);
    }

    solubleWall
    {
      type            normalMotionSlip;
      value           uniform (0 0 0);
      field           C;
      scalarName      lR;
    }
}

